<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryDark">@color/boldThemeColor</item>
        <item name="colorAccent">@color/lightThemeColor</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/boldThemeColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/boldThemeColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
