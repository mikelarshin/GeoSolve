<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TemplateText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/plain_text</item>
        <item name="android:textSize">@dimen/SMALL_TEXT_SIZE</item>
    </style>

    <style name="Bold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/plain_text</item>
        <item name="android:textSize">@dimen/BOLD_TEXT_SIZE</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnswerText" parent="Theme.AppCompat">
        <item name="android:textColor">@color/color_mark</item>
        <item name="android:textSize">@dimen/ANSWER_TEXT_SIZE</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
