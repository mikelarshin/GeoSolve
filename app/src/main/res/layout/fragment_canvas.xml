<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <open.geosolve.geosolve.ui.canvas.FigureFieldView
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_math"
        app:layout_constraintBottom_toBottomOf="@id/figure_type_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/figure_type_background" />

    <!-- region Figure type -->

    <!-- Background -->
    <View
        android:id="@+id/figure_type_background"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/ic_background"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Name -->
    <TextView
        android:id="@+id/figure_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- endregion -->

    <!-- region Tools -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clear_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toTopOf="@id/tools_separator"
        app:layout_constraintEnd_toEndOf="@id/tools_container"
        app:layout_constraintStart_toStartOf="@id/tools_container" />

    <!-- Separator -->
    <View
        android:id="@+id/tools_separator"
        android:layout_width="24dp"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/tools_container"
        app:layout_constraintEnd_toEndOf="@id/tools_container"
        app:layout_constraintStart_toStartOf="@id/tools_container" />

    <!-- Tools container -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/tools_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- endregion -->

</androidx.constraintlayout.widget.ConstraintLayout>